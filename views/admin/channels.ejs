<!DOCTYPE html>
<html lang="th">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>จัดการช่อง - Admin</title>
    <link rel="stylesheet" href="/css/admin.css">
</head>

<body>
    <div class="admin-container">
        <nav class="admin-sidebar">
            <div class="admin-logo">Admin Panel</div>
            <div class="admin-nav">
                <a href="/admin/dashboard" class="admin-nav-item">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="3" y="3" width="7" height="7"></rect>
                        <rect x="14" y="3" width="7" height="7"></rect>
                        <rect x="14" y="14" width="7" height="7"></rect>
                        <rect x="3" y="14" width="7" height="7"></rect>
                    </svg>
                    <span>แดชบอร์ด</span>
                </a>
                <a href="/admin/users" class="admin-nav-item">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                        <circle cx="9" cy="7" r="4"></circle>
                        <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                        <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                    </svg>
                    <span>จัดการผู้ใช้</span>
                </a>
                <a href="/admin/servers" class="admin-nav-item">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect>
                        <line x1="8" y1="21" x2="16" y2="21"></line>
                        <line x1="12" y1="17" x2="12" y2="21"></line>
                    </svg>
                    <span>จัดการเซิร์ฟเวอร์</span>
                </a>
                <a href="/admin/channels" class="admin-nav-item active">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="4" y1="9" x2="20" y2="9"></line>
                        <line x1="4" y1="15" x2="20" y2="15"></line>
                        <line x1="10" y1="3" x2="8" y2="21"></line>
                        <line x1="16" y1="3" x2="14" y2="21"></line>
                    </svg>
                    <span>จัดการช่อง</span>
                </a>
                <a href="/admin/messages" class="admin-nav-item">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
                    </svg>
                    <span>จัดการข้อความ</span>
                </a>
            </div>
            <div class="admin-nav-footer">
                <a href="/" class="admin-nav-item" target="_blank">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
                        <polyline points="15 3 21 3 21 9"></polyline>
                        <line x1="10" y1="14" x2="21" y2="3"></line>
                    </svg>
                    <span>ไปที่แชท</span>
                </a>
                <button id="adminLogoutBtn" class="admin-nav-item">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                        <polyline points="16 17 21 12 16 7"></polyline>
                        <line x1="21" y1="12" x2="9" y2="12"></line>
                    </svg>
                    <span>ออกจากระบบ</span>
                </button>
            </div>
        </nav>

        <main class="admin-main">
            <header class="admin-header">
                <div style="display: flex; justify-content: space-between; align-items: center;">
                    <h1>จัดการช่อง</h1>
                    <button class="admin-btn admin-btn-primary" onclick="openCreateChannelModal()">+ เพิ่มช่อง</button>
                </div>
            </header>

            <div class="admin-content">
                <div class="admin-table-container">
                    <table class="admin-table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>ชื่อ</th>
                                <th>ประเภท</th>
                                <th>เซิร์ฟเวอร์</th>
                                <th>การจัดการ</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% channels.forEach(channel=> { %>
                                <tr>
                                    <td>
                                        <%= channel.id %>
                                    </td>
                                    <td>
                                        <%= channel.name %>
                                    </td>
                                    <td>
                                        <% if (channel.type === 'text') { %>
                                            <span style="padding: 4px 8px; background: #5865F2; color: white; border-radius: 4px; font-size: 12px; font-weight: 500;">Text</span>
                                        <% } else if (channel.type === 'whiteboard') { %>
                                            <span style="padding: 4px 8px; background: #23A559; color: white; border-radius: 4px; font-size: 12px; font-weight: 500;">Whiteboard</span>
                                        <% } else if (channel.type === 'note') { %>
                                            <span style="padding: 4px 8px; background: #F0B232; color: white; border-radius: 4px; font-size: 12px; font-weight: 500;">Note</span>
                                        <% } else { %>
                                            <span style="padding: 4px 8px; background: #949BA4; color: white; border-radius: 4px; font-size: 12px; font-weight: 500;"><%= channel.type %></span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <%= channel.server_name || 'N/A' %>
                                    </td>
                                    <td>
                                        <button class="admin-btn admin-btn-warning"
                                            onclick="openEditChannelModal('<%= channel.id %>', '<%= channel.name %>', '<%= channel.type %>', <%= channel.server_id %>)">แก้ไข</button>
                                        <button class="admin-btn admin-btn-danger"
                                            onclick="deleteChannel('<%= channel.id %>')">ลบ</button>
                                    </td>
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </main>
    </div>

    <div id="channelModal" class="admin-modal">
        <div class="admin-modal-content">
            <div class="admin-modal-header">
                <h2 class="admin-modal-title" id="channelModalTitle">เพิ่มช่อง</h2>
                <button class="admin-modal-close" onclick="closeChannelModal()">×</button>
            </div>
            <form id="channelForm" onsubmit="handleChannelSubmit(event)">
                <input type="hidden" id="channelId" />
                <div class="admin-form-group">
                    <label class="admin-form-label">เซิร์ฟเวอร์</label>
                    <select id="channelServerId" class="admin-form-select" required>
                        <% servers.forEach(server=> { %>
                            <option value="<%= server.id %>">
                                <%= server.name %>
                            </option>
                            <% }); %>
                    </select>
                </div>
                <div class="admin-form-group">
                    <label class="admin-form-label">ชื่อช่อง</label>
                    <input type="text" id="channelName" class="admin-form-input" required />
                </div>
                <div class="admin-form-group">
                    <label class="admin-form-label">ประเภท</label>
                    <select id="channelType" class="admin-form-select" required>
                        <option value="text">Text</option>
                        <option value="voice">Voice</option>
                        <option value="whiteboard">Whiteboard</option>
                        <option value="note">Note</option>
                    </select>
                </div>
                <div style="display: flex; gap: 8px; justify-content: flex-end; margin-top: 20px;">
                    <button type="button" class="admin-btn" onclick="closeChannelModal()"
                        style="background: #35373C; color: #F2F3F5;">ยกเลิก</button>
                    <button type="submit" class="admin-btn admin-btn-primary">บันทึก</button>
                </div>
            </form>
        </div>
    </div>

    <script src="/js/modal.js"></script>
    <script src="/js/admin.js"></script>
    <script>
        function openCreateChannelModal() {
            document.getElementById('channelModalTitle').textContent = 'เพิ่มช่อง';
            document.getElementById('channelId').value = '';
            document.getElementById('channelName').value = '';
            document.getElementById('channelType').value = 'text';
            document.getElementById('channelModal').classList.add('active');
        }

        function openEditChannelModal(id, name, type, serverId) {
            document.getElementById('channelModalTitle').textContent = 'แก้ไขช่อง';
            document.getElementById('channelId').value = id;
            document.getElementById('channelName').value = name;
            document.getElementById('channelType').value = type;
            document.getElementById('channelServerId').value = serverId;
            document.getElementById('channelModal').classList.add('active');
        }

        function closeChannelModal() {
            document.getElementById('channelModal').classList.remove('active');
        }

        function handleChannelSubmit(e) {
            e.preventDefault();
            const id = document.getElementById('channelId').value;
            const name = document.getElementById('channelName').value;
            const type = document.getElementById('channelType').value;
            const serverId = parseInt(document.getElementById('channelServerId').value);

            const url = id ? '/admin/channels/update' : '/admin/channels/create';
            const body = id ? { channelId: id, name, type } : { serverId, name, type };

            fetch(url, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(body)
            })
                .then(res => res.json())
                .then(data => {
                    if (data.success) {
                        showNotification(id ? 'แก้ไขสำเร็จ' : 'สร้างสำเร็จ', 'success');
                        setTimeout(() => window.location.reload(), 1000);
                    } else {
                        showNotification(data.error || 'เกิดข้อผิดพลาด', 'error');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    showNotification('เกิดข้อผิดพลาด', 'error');
                });
        }

        async function deleteChannel(channelId) {
            const confirmed = await showConfirmModal({
                title: 'ยืนยันการลบ',
                message: 'คุณต้องการลบช่องนี้หรือไม่? (จะลบข้อความทั้งหมดในช่องนี้ด้วย)',
                confirmText: 'ลบ',
                cancelText: 'ยกเลิก',
                danger: true
            });
            if (!confirmed) return;
            fetch('/admin/channels/delete', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ channelId })
            })
                .then(res => res.json())
                .then(data => {
                    if (data.success) {
                        showNotification('ลบสำเร็จ', 'success');
                        setTimeout(() => window.location.reload(), 1000);
                    } else {
                        showNotification(data.error || 'เกิดข้อผิดพลาด', 'error');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    showNotification('เกิดข้อผิดพลาด', 'error');
                });
        }
    </script>
</body>

</html>