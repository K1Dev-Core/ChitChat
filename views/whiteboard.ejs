    <style>
        .whiteboard-toolbar {
            padding: 8px 16px;
            background: #2B2D31;
            border-bottom: 1px solid #1E1F22;
            display: flex;
            align-items: center;
            gap: 8px;
            flex-shrink: 0;
        }

        .toolbar-group {
            display: flex;
            gap: 4px;
            align-items: center;
            padding: 0 8px;
            border-right: 1px solid #1E1F22;
        }

        .toolbar-group:last-child {
            border-right: none;
        }

        .toolbar-btn {
            background: transparent;
            border: none;
            color: #949BA4;
            cursor: pointer;
            padding: 6px 8px;
            border-radius: 4px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.2s;
            font-size: 14px;
        }

        .toolbar-btn:hover {
            background: #35373C;
            color: #F2F3F5;
        }

        .toolbar-btn.active {
            background: #5865F2;
            color: white;
        }

        .toolbar-btn:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

        .toolbar-btn:disabled:hover {
            background: transparent;
            color: #949BA4;
        }

        .toolbar-btn svg {
            width: 18px;
            height: 18px;
        }

        #whiteboard-canvas {
            flex: 1;
            width: 100%;
            height: 100%;
            overflow: hidden;
            background: #1E1F22;
            cursor: grab;
        }

        #whiteboard-canvas:active {
            cursor: grabbing;
        }

        .whiteboard-main {
            flex: 1;
            display: flex;
            flex-direction: column;
            min-width: 0;
            position: relative;
            overflow: hidden;
        }

        .whiteboard-wrapper {
            flex: 1;
            position: relative;
            overflow: hidden;
            background: #1E1F22;
        }

        .remote-cursor {
            position: absolute;
            width: 20px;
            height: 20px;
            pointer-events: none;
            z-index: 1000;
            transition: transform 0.1s ease-out;
        }

        .remote-cursor svg {
            width: 100%;
            height: 100%;
        }

        .remote-cursor-label {
            position: absolute;
            top: 22px;
            left: 0;
            background: rgba(0, 0, 0, 0.8);
            color: white;
            padding: 2px 6px;
            border-radius: 4px;
            font-size: 11px;
            white-space: nowrap;
            pointer-events: none;
        }

        #fileInputWhiteboard {
            display: none;
        }

        .zoom-controls {
            position: absolute;
            bottom: 20px;
            right: 20px;
            display: flex;
            flex-direction: column;
            gap: 8px;
            z-index: 100;
        }

        .zoom-btn {
            background: #2B2D31;
            border: 1px solid #1E1F22;
            color: #F2F3F5;
            width: 40px;
            height: 40px;
            border-radius: 4px;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.2s;
        }

        .zoom-btn:hover {
            background: #35373C;
        }

        .zoom-btn svg {
            width: 20px;
            height: 20px;
        }
    </style>
</head>

