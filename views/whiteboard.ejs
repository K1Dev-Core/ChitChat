    <script>
        let canvas = null;
        let currentChannelId = '<%= selectedChannelId %>';
        let currentMode = 'select';
        let socket = null;
        let isDrawing = false;
        let isUpdatingFromRemote = false;
        let zoomLevel = 1;
        let isPanning = false;
        let lastPanPoint = { x: 0, y: 0 };
        let remoteCursors = new Map();
        <% if (currentUser) { %>
            let currentUser = {
                id: '<%= currentUser.id %>',
                name: '<%= currentUser.name %>',
                avatar: '<%= currentUser.avatar %>'
            };
        <% } else { %>
            let currentUser = null;
        <% } %>
            let userColor = currentUser ? generateColorFromString(currentUser.id) : '#5865F2';

        function generateColorFromString(str) {
            let hash = 0;
            for (let i = 0; i < str.length; i++) {
                hash = str.charCodeAt(i) + ((hash << 5) - hash);
            }
            const hue = Math.abs(hash % 360);
            return `hsl(${hue}, 70%, 60%)`;
        }

        window.addEventListener('load', () => {
            socket = io();

            socket.on('connect', () => {
                socket.emit('joinWhiteboard', { channelId: currentChannelId });
            });

            socket.on('whiteboardUpdate', (data) => {
                if (data.channelId === currentChannelId && canvas && !isUpdatingFromRemote) {
                    isUpdatingFromRemote = true;

                    if (data.changeType === 'object:added' && data.changeData) {
                        fabric.util.enlivenObjects([data.changeData], (objects) => {
                            objects.forEach(obj => {
                                if (!canvas.getObjects().some(o => o.id === obj.id)) {
                                    canvas.add(obj);
                                }
                            });
                            canvas.renderAll();
                        });
                    } else if (data.changeType === 'object:modified' && data.changeData) {
                        const existingObj = canvas.getObjects().find(o => o.id === data.changeData.id);
                        if (existingObj) {
                            existingObj.set(data.changeData);
                            canvas.renderAll();
                        }
                    } else if (data.changeType === 'object:removed' && data.changeData) {
                        const existingObj = canvas.getObjects().find(o => o.id === data.changeData.id);
                        if (existingObj) {
                            canvas.remove(existingObj);
                            canvas.renderAll();
                        }
                    } else if (data.changeType === 'path:created' && data.changeData) {
                        fabric.util.enlivenObjects([data.changeData], (objects) => {
                            objects.forEach(obj => {
                                if (!canvas.getObjects().some(o => o.id === obj.id)) {
                                    canvas.add(obj);
                                }
                            });
                            canvas.renderAll();
                        });
                    } else if (!data.changeType) {
                        canvas.loadFromJSON(data.canvasData, () => {
                            canvas.renderAll();
                        });
                    }

                    setTimeout(() => {
                        isUpdatingFromRemote = false;
                    }, 100);
                }
            });

            socket.on('userCursor', (data) => {
                if (data.channelId === currentChannelId && data.userId !== currentUser?.id) {
                    updateRemoteCursor(data.userId, data.userName, data.userColor, data.x, data.y);
                }
            });

            const container = document.getElementById('whiteboard-canvas');
            const wrapper = document.getElementById('whiteboardWrapper');

            canvas = new fabric.Canvas(container, {
                width: wrapper.offsetWidth,
                height: wrapper.offsetHeight,
                backgroundColor: '#1E1F22',
                selection: true,
                preserveObjectStacking: true
            });

            canvas.setWidth(wrapper.offsetWidth);
            canvas.setHeight(wrapper.offsetHeight);

            canvas.on('object:added', (e) => {
                if (!isUpdatingFromRemote && e.target) {
                    if (!e.target.id) {
                        e.target.id = `obj_${Date.now()}_${Math.random().toString(36).substr(2, 9)}`;
                    }
                    const json = canvas.toJSON();
                    socket.emit('whiteboardChange', {
                        channelId: currentChannelId,
                        canvasData: json,
                        changeType: 'object:added',
                        changeData: e.target.toObject()
                    });
                }
            });

            canvas.on('object:modified', (e) => {
                if (!isUpdatingFromRemote && e.target) {
                    const json = canvas.toJSON();
                    socket.emit('whiteboardChange', {
                        channelId: currentChannelId,
                        canvasData: json,
                        changeType: 'object:modified',
                        changeData: e.target.toObject()
                    });
                }
            });

            canvas.on('object:removed', (e) => {
                if (!isUpdatingFromRemote && e.target) {
                    const json = canvas.toJSON();
                    socket.emit('whiteboardChange', {
                        channelId: currentChannelId,
                        canvasData: json,
                        changeType: 'object:removed',
                        changeData: { id: e.target.id }
                    });
                }
            });

            canvas.on('path:created', (e) => {
                if (!isUpdatingFromRemote && e.path) {
                    if (!e.path.id) {
                        e.path.id = `path_${Date.now()}_${Math.random().toString(36).substr(2, 9)}`;
                    }
                    const json = canvas.toJSON();
                    socket.emit('whiteboardChange', {
                        channelId: currentChannelId,
                        canvasData: json,
                        changeType: 'path:created',
                        changeData: e.path.toObject()
                    });
                }
            });

            canvas.freeDrawingBrush.width = 3;
            canvas.freeDrawingBrush.color = userColor;

            setupZoomAndPan();
            setupCursorTracking();
            setupToolbar();

            window.addEventListener('resize', () => {
                canvas.setDimensions({
                    width: wrapper.offsetWidth,
                    height: wrapper.offsetHeight
                });
            });

            loadWhiteboard();
        });

        function setupZoomAndPan() {
            const wrapper = document.getElementById('whiteboardWrapper');

            canvas.on('mouse:wheel', (opt) => {
                const delta = opt.e.deltaY;
                let zoom = canvas.getZoom();
                zoom *= 0.999 ** delta;
                zoom = Math.max(0.1, Math.min(5, zoom));

                const point = new fabric.Point(opt.e.offsetX, opt.e.offsetY);
                canvas.zoomToPoint(point, zoom);
                zoomLevel = zoom;

                opt.e.preventDefault();
                opt.e.stopPropagation();
            });

            canvas.on('mouse:down', (opt) => {
                if (opt.e.button === 1 || (opt.e.button === 0 && opt.e.ctrlKey)) {
                    isPanning = true;
                    lastPanPoint = { x: opt.e.clientX, y: opt.e.clientY };
                    canvas.selection = false;
                    canvas.defaultCursor = 'grabbing';
                }
            });

            canvas.on('mouse:move', (opt) => {
                if (isPanning) {
                    const e = opt.e;
                    const vpt = canvas.viewportTransform;
                    vpt[4] += e.clientX - lastPanPoint.x;
                    vpt[5] += e.clientY - lastPanPoint.y;
                    canvas.requestRenderAll();
                    lastPanPoint = { x: e.clientX, y: e.clientY };
                }
            });

            canvas.on('mouse:up', () => {
                if (isPanning) {
                    isPanning = false;
                    canvas.selection = true;
                    canvas.defaultCursor = 'default';
                }
            });

            document.getElementById('zoomInBtn').addEventListener('click', () => {
                const center = canvas.getCenter();
                const zoom = Math.min(5, zoomLevel * 1.2);
                canvas.zoomToPoint(center, zoom);
                zoomLevel = zoom;
            });

            document.getElementById('zoomOutBtn').addEventListener('click', () => {
                const center = canvas.getCenter();
                const zoom = Math.max(0.1, zoomLevel / 1.2);
                canvas.zoomToPoint(center, zoom);
                zoomLevel = zoom;
            });

            document.getElementById('resetZoomBtn').addEventListener('click', () => {
                canvas.setZoom(1);
                canvas.viewportTransform[4] = 0;
                canvas.viewportTransform[5] = 0;
                zoomLevel = 1;
                canvas.renderAll();
            });
        }

        function setupCursorTracking() {
            const wrapper = document.getElementById('whiteboardWrapper');

            canvas.on('mouse:move', (opt) => {
                if (socket && currentUser) {
                    const wrapperRect = wrapper.getBoundingClientRect();
                    const x = opt.e.clientX - wrapperRect.left;
                    const y = opt.e.clientY - wrapperRect.top;

                    socket.emit('whiteboardCursor', {
                        channelId: currentChannelId,
                        x: x,
                        y: y,
                        userId: currentUser.id,
                        userName: currentUser.name,
                        userColor: userColor
                    });
                }
            });
        }

        function updateRemoteCursor(userId, userName, userColor, x, y) {
            let cursor = remoteCursors.get(userId);

            if (!cursor) {
                cursor = document.createElement('div');
                cursor.className = 'remote-cursor';
                cursor.style.color = userColor;
                cursor.innerHTML = `
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M3 3l7.07 16.97 2.51-7.39 7.39-2.51L3 3z"></path>
                    </svg>
                    <div class="remote-cursor-label" style="background: ${userColor}">${userName}</div>
                `;
                document.getElementById('whiteboardWrapper').appendChild(cursor);
                remoteCursors.set(userId, cursor);
            }

            cursor.style.left = x + 'px';
            cursor.style.top = y + 'px';

            clearTimeout(cursor.timeout);
            cursor.timeout = setTimeout(() => {
                if (cursor && cursor.parentNode) {
                    cursor.parentNode.removeChild(cursor);
                    remoteCursors.delete(userId);
                }
            }, 2000);
        }

        function setupToolbar() {
            document.getElementById('selectTool').addEventListener('click', () => {
                setMode('select');
            });

            document.getElementById('drawTool').addEventListener('click', () => {
                setMode('draw');
            });

            document.getElementById('textTool').addEventListener('click', () => {
                setMode('text');
            });

            document.getElementById('imageTool').addEventListener('click', () => {
                document.getElementById('fileInputWhiteboard').click();
            });

            document.getElementById('clearBtn').addEventListener('click', async () => {
                const confirmed = await showConfirmModal({
                    title: 'ยืนยันการล้าง',
                    message: 'คุณต้องการล้าง whiteboard ทั้งหมดหรือไม่?',
                    confirmText: 'ล้าง',
                    cancelText: 'ยกเลิก',
                    danger: true
                });

                if (!confirmed) return;
                if (canvas) {
                    canvas.clear();
                    canvas.backgroundColor = '#1E1F22';
                    const json = canvas.toJSON();
                    socket.emit('whiteboardChange', {
                        channelId: currentChannelId,
                        canvasData: json
                    });
                }
            });

            document.getElementById('fileInputWhiteboard').addEventListener('change', (e) => {
                const file = e.target.files[0];
                if (file && file.type.startsWith('image/')) {
                    const reader = new FileReader();
                    reader.onload = (event) => {
                        fabric.Image.fromURL(event.target.result, (img) => {
                            img.scale(0.5);
                            img.id = `img_${Date.now()}_${Math.random().toString(36).substr(2, 9)}`;
                            canvas.add(img);
                            canvas.setActiveObject(img);
                            canvas.renderAll();
                        });
                    };
                    reader.readAsDataURL(file);
                }
                e.target.value = '';
            });

            document.getElementById('deleteTool').addEventListener('click', () => {
                deleteSelectedObjects();
            });

            // เพิ่มการรองรับการลบด้วยคีย์บอร์ด (Delete/Backspace)
            document.addEventListener('keydown', (e) => {
                // ตรวจสอบว่าไม่ได้กำลังพิมพ์ใน input หรือ textarea
                if (e.target.tagName === 'INPUT' || e.target.tagName === 'TEXTAREA') {
                    return;
                }

                if (e.key === 'Delete' || e.key === 'Backspace') {
                    e.preventDefault();
                    deleteSelectedObjects();
                }
            });
        }

        function deleteSelectedObjects() {
            if (!canvas) return;

            const activeObjects = canvas.getActiveObjects();

            if (activeObjects && activeObjects.length > 0) {
                // ลบหลายวัตถุที่เลือกไว้
                activeObjects.forEach(obj => {
                    canvas.remove(obj);
                });
                canvas.discardActiveObject();
                canvas.renderAll();
            } else {
                // ลบวัตถุที่เลือกไว้เพียงตัวเดียว
                const activeObject = canvas.getActiveObject();
                if (activeObject) {
                    canvas.remove(activeObject);
                    canvas.renderAll();
                }
            }
        }

        function setMode(mode) {
            currentMode = mode;

            document.querySelectorAll('.toolbar-btn').forEach(btn => {
                btn.classList.remove('active');
            });

            if (mode === 'select') {
                document.getElementById('selectTool').classList.add('active');
                canvas.isDrawingMode = false;
                canvas.selection = true;
                canvas.defaultCursor = 'default';
            } else if (mode === 'draw') {
                document.getElementById('drawTool').classList.add('active');
                canvas.isDrawingMode = true;
                canvas.selection = false;
                canvas.freeDrawingBrush.width = 3;
                canvas.freeDrawingBrush.color = userColor;
            } else if (mode === 'text') {
                document.getElementById('textTool').classList.add('active');
                canvas.isDrawingMode = false;
                canvas.selection = true;
                addText();
            }
        }

        function addText() {
            const text = new fabric.IText('คลิกเพื่อแก้ไข', {
                left: 100,
                top: 100,
                fontFamily: 'Arial',
                fontSize: 20,
                fill: '#F2F3F5',
                editable: true
            });
            text.id = `text_${Date.now()}_${Math.random().toString(36).substr(2, 9)}`;
            canvas.add(text);
            canvas.setActiveObject(text);
            canvas.renderAll();
        }

        async function loadWhiteboard() {
            try {
                const response = await fetch(`/api/whiteboard/${currentChannelId}`);
                if (response.ok) {
                    const data = await response.json();
                    if (data && canvas) {
                        canvas.loadFromJSON(data, () => {
                            canvas.renderAll();
                        });
                    }
                }
            } catch (error) {
                console.error('Error loading whiteboard:', error);
            }
        }

        const mobileMenuBtn = document.getElementById('mobileMenuBtn');
        const channelSidebar = document.querySelector('.channel-sidebar');
        const channelSidebarOverlay = document.getElementById('channelSidebarOverlay');
        const channelSidebarClose = document.getElementById('channelSidebarClose');

        function closeChannelSidebar() {
            if (channelSidebar) {
                channelSidebar.classList.remove('open');
            }
            if (channelSidebarOverlay) {
                channelSidebarOverlay.classList.remove('active');
            }
        }

        if (mobileMenuBtn && channelSidebar) {
            mobileMenuBtn.addEventListener('click', () => {
                const isOpen = channelSidebar.classList.toggle('open');
                if (channelSidebarOverlay) {
                    if (isOpen) {
                        channelSidebarOverlay.classList.add('active');
                    } else {
                        channelSidebarOverlay.classList.remove('active');
                    }
                }
            });
        }

        if (channelSidebarClose) {
            channelSidebarClose.addEventListener('click', (e) => {
                e.stopPropagation();
                closeChannelSidebar();
            });
        }

        if (channelSidebarOverlay) {
            channelSidebarOverlay.addEventListener('click', () => {
                closeChannelSidebar();
            });
        }

        const channelItems = document.querySelectorAll('.channel-item');
        channelItems.forEach(item => {
            item.addEventListener('click', () => {
                if (window.innerWidth <= 768) {
                    closeChannelSidebar();
                }
            });
        });
    </script>
