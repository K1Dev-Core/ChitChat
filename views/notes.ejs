        <div class="modal-container">
            <div class="modal-box">
                <h1 class="modal-title" id="noteModalTitle">เพิ่มโน้ต</h1>
                <form id="noteForm" enctype="multipart/form-data">
                    <input type="hidden" id="noteId" name="noteId" />
                    <input type="hidden" id="channelId" name="channelId" value="<%= selectedChannelId %>" />
                    <div class="note-modal-form">
                        <div class="note-modal-field">
                            <label class="note-modal-label">หัวข้อ *</label>
                            <input type="text" id="noteTitle" name="title" class="modal-input" required
