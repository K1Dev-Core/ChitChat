                            <div id="uploadsPreview" class="note-uploads-preview" style="display: none;"></div>
                        </div>
                        <div class="note-modal-actions">
                            <button type="button" class="modal-button" onclick="closeNoteModal()"
                                style="background: #35373C;">ยกเลิก</button>
                            <button type="submit" class="modal-button">บันทึก</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="/js/modal.js"></script>
    <script>
        const currentChannelId = '<%= selectedChannelId %>';
        const currentUser = <% - JSON.stringify(currentUser || null) %>;

        document.getElementById('addNoteBtn')?.addEventListener('click', () => {
            if (!currentUser) {
                alert('กรุณาเข้าสู่ระบบก่อน');
                return;
            }
            openNoteModal();
        });

        function openNoteModal(noteId = null) {
            const modal = document.getElementById('noteModal');
            const form = document.getElementById('noteForm');
            const titleInput = document.getElementById('noteModalTitle');
            const noteIdInput = document.getElementById('noteId');

            if (noteId) {
                titleInput.textContent = 'แก้ไขโน้ต';
                noteIdInput.value = noteId;
                loadNoteData(noteId);
            } else {
                titleInput.textContent = 'เพิ่มโน้ต';
                noteIdInput.value = '';
                form.reset();
                const prev = document.getElementById('uploadsPreview');
                if (prev) {
                    prev.style.display = 'none';
                    prev.innerHTML = '';
                }
            }
            modal.style.display = 'flex';
        }

        function closeNoteModal() {
            document.getElementById('noteModal').style.display = 'none';
            document.getElementById('noteForm').reset();
            const prev = document.getElementById('uploadsPreview');
            if (prev) {
                prev.style.display = 'none';
                prev.innerHTML = '';
            }
        }

        async function loadNoteData(noteId) {
            try {
                const response = await fetch(`/api/note/${noteId}`);
                const note = await response.json();

                document.getElementById('noteTitle').value = note.title || '';
                document.getElementById('noteContent').value = note.content || '';
                document.getElementById('noteTags').value = note.tags || '';

                const prev = document.getElementById('uploadsPreview');
                if (prev) {
                    prev.style.display = 'none';
                    prev.innerHTML = '';
                }

                if (uploadsInput) {
                    uploadsInput.value = '';
                }

                let files = [];
                if (note.file_path) {
                    try {
                        const parsed = JSON.parse(note.file_path || '[]');
                        if (Array.isArray(parsed)) files = parsed;
                    } catch (e) {
                        files = [];
                    }
                }

                if ((!files || !files.length) && note.image_path) {
                    files = [{ path: note.image_path, name: 'image', type: 'image/*' }];
                }

                if (prev && files && files.length) {
                    const imageFiles = files.filter(f => f && f.type && f.type.startsWith('image/'));
                    const firstImage = imageFiles[0] || null;

                    let html = '';
                    if (firstImage) {
                        html += `<div class="note-upload-preview-row">
                            <img class="note-upload-thumb" src="${firstImage.path}" alt="preview" data-preview-image="1" />
                            <div style="flex: 1; overflow: hidden;">
                                <div style="color:#F2F3F5; font-size:13px; overflow:hidden; text-overflow:ellipsis; white-space:nowrap;">${escapeText(firstImage.name)}</div>
                                <div style="color:#949BA4; font-size:12px;">รูปภาพ</div>
                            </div>
                            <div class="note-upload-actions">
                                ${files.length > 1 ? `<button type="button" class="note-mini-btn" id="openAllUploadsBtn">ดูทั้งหมด (${files.length})</button>` : ''}
                            </div>
                        </div>`;
                    }

                    const nonImages = files.filter(f => !(f && f.type && f.type.startsWith('image/')));
                    if (!firstImage && nonImages.length) {
                        const f0 = nonImages[0];
                        html += `<div class="note-upload-preview-row">
                            <div class="note-upload-filepill">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="flex:0 0 auto; color:#949BA4;">
                                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                                    <polyline points="14 2 14 8 20 8"></polyline>
                                </svg>
                                <div class="note-upload-filepill-name">${escapeText(f0.name)}</div>
                                ${nonImages.length > 1 ? `<div style="color:#949BA4; font-size:12px;">+${nonImages.length - 1} อื่นๆ</div>` : ''}
                            </div>
                            <div class="note-upload-actions">
                                ${files.length > 1 ? `<button type="button" class="note-mini-btn" id="openAllUploadsBtn">ดูทั้งหมด (${files.length})</button>` : ''}
                            </div>
                        </div>`;
                    }

                    prev.innerHTML = html;
                    prev.style.display = 'flex';

                    const openAllBtn = document.getElementById('openAllUploadsBtn');
                    if (openAllBtn) {
                        openAllBtn.onclick = () => openNoteViewModal(noteId);
                    }

                    const thumb = prev.querySelector('[data-preview-image="1"]');
                    if (thumb && firstImage) {
                        thumb.addEventListener('click', () => openImageLightbox(firstImage.path));
                    }
                }
            } catch (error) {
            }
        }

        const uploadsInput = document.getElementById('noteUploads');

        function escapeText(s) {
            return String(s || '').replace(/[&<>"]/g, c => ({ '&': '&amp;', '<': '&lt;', '>': '&gt;', '"': '&quot;' }[c]));
        }

        function renderUploadsPreview(files) {
            const wrap = document.getElementById('uploadsPreview');
            if (!wrap) return;

            if (!files || !files.length) {
                wrap.style.display = 'none';
                wrap.innerHTML = '';
                return;
            }

            const imageFiles = files.filter(f => f && f.type && f.type.startsWith('image/'));
            const firstImage = imageFiles[0] || null;

            let html = '';

            if (firstImage) {
                const url = URL.createObjectURL(firstImage);
                html += `<div class="note-upload-preview-row">
                    <img class="note-upload-thumb" src="${url}" alt="preview" data-preview-image="1" />
                    <div style="flex: 1; overflow: hidden;">
                        <div style="color:#F2F3F5; font-size:13px; overflow:hidden; text-overflow:ellipsis; white-space:nowrap;">${escapeText(firstImage.name)}</div>
                        <div style="color:#949BA4; font-size:12px;">รูปภาพ</div>
                    </div>
                    <div class="note-upload-actions">
                        ${imageFiles.length > 1 ? `<button type="button" class="note-mini-btn" id="openAllUploadsBtn">ดูทั้งหมด (${imageFiles.length})</button>` : ''}
                    </div>
                </div>`;
            }

            const nonImages = files.filter(f => !(f && f.type && f.type.startsWith('image/')));
            if (!firstImage && nonImages.length) {
                const f0 = nonImages[0];
                html += `<div class="note-upload-preview-row">
                    <div class="note-upload-filepill">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="flex:0 0 auto; color:#949BA4;">
                            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                            <polyline points="14 2 14 8 20 8"></polyline>
                        </svg>
                        <div class="note-upload-filepill-name">${escapeText(f0.name)}</div>
                        ${nonImages.length > 1 ? `<div style="color:#949BA4; font-size:12px;">+${nonImages.length - 1} อื่นๆ</div>` : ''}
                    </div>
                    <div class="note-upload-actions">
                        ${files.length > 1 ? `<button type="button" class="note-mini-btn" id="openAllUploadsBtn">ดูทั้งหมด (${files.length})</button>` : ''}
                    </div>
                </div>`;
            }

            if (firstImage && nonImages.length) {
                const f0 = nonImages[0];
                html += `<div class="note-upload-preview-row">
                    <div class="note-upload-filepill">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="flex:0 0 auto; color:#949BA4;">
                            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                            <polyline points="14 2 14 8 20 8"></polyline>
                        </svg>
                        <div class="note-upload-filepill-name">${escapeText(f0.name)}</div>
                        ${nonImages.length > 1 ? `<div style="color:#949BA4; font-size:12px;">+${nonImages.length - 1} อื่นๆ</div>` : ''}
                    </div>
                </div>`;
            }

            wrap.innerHTML = html;
            wrap.style.display = 'flex';

            const openAllBtn = document.getElementById('openAllUploadsBtn');
            if (openAllBtn) {
                openAllBtn.onclick = () => openUploadsListModal(files);
            }

            const thumb = wrap.querySelector('[data-preview-image="1"]');
            if (thumb && firstImage) {
                thumb.addEventListener('click', () => openImageLightbox(URL.createObjectURL(firstImage)));
            }
        }

        if (uploadsInput) {
            uploadsInput.addEventListener('change', (e) => {
                const list = Array.from(e.target.files || []);
                renderUploadsPreview(list);
            });
        }

        document.getElementById('noteForm')?.addEventListener('submit', async (e) => {
            e.preventDefault();

            if (!currentUser) {
                alert('กรุณาเข้าสู่ระบบก่อน');
                return;
            }

            const formData = new FormData(e.target);
            if (formData.has('file')) formData.delete('file');
            if (formData.has('image')) formData.delete('image');
            const noteId = document.getElementById('noteId').value;
            const url = noteId ? `/api/notes/${noteId}` : '/api/notes';
            const method = noteId ? 'PUT' : 'POST';

            try {
                const response = await fetch(url, {
                    method: method,
                    body: formData
                });

                const data = await response.json();

                if (data.success) {
                    closeNoteModal();
                    window.location.reload();
                } else {
                    alert(data.error || 'เกิดข้อผิดพลาด');
                }
            } catch (error) {
                console.error('Error saving note:', error);
                alert('เกิดข้อผิดพลาดในการบันทึกโน้ต');
            }
        });

        document.querySelectorAll('.edit-note-btn').forEach(btn => {
            btn.addEventListener('click', (e) => {
                e.stopPropagation();
                const noteId = btn.dataset.noteId;
                openNoteModal(noteId);
            });
        });

        document.querySelectorAll('.delete-note-btn').forEach(btn => {
            btn.addEventListener('click', async (e) => {
                e.stopPropagation();
                const noteId = btn.dataset.noteId;

                if (!confirm('คุณต้องการลบโน้ตนี้หรือไม่?')) {
                    return;
                }

                try {
                    const response = await fetch(`/api/notes/${noteId}`, {
                        method: 'DELETE'
                    });

                    const data = await response.json();

                    if (data.success) {
                        window.location.reload();
                    } else {
                        alert(data.error || 'เกิดข้อผิดพลาด');
                    }
                } catch (error) {
                    console.error('Error deleting note:', error);
                    alert('เกิดข้อผิดพลาดในการลบโน้ต');
                }
            });
        });

        function closeNoteViewModal() {
            const modal = document.getElementById('noteViewModal');
            if (modal) modal.style.display = 'none';
            const titleEl = document.getElementById('noteViewTitle');
            const contentEl = document.getElementById('noteViewContent');
            const attEl = document.getElementById('noteViewAttachments');
            if (titleEl) titleEl.textContent = '';
            if (contentEl) contentEl.textContent = '';
            if (attEl) attEl.innerHTML = '';
        }

        async function openNoteViewModal(noteId) {
            try {
                const response = await fetch(`/api/note/${noteId}`);
                const note = await response.json();

                const modal = document.getElementById('noteViewModal');
                const titleEl = document.getElementById('noteViewTitle');
                const contentEl = document.getElementById('noteViewContent');
                const attEl = document.getElementById('noteViewAttachments');

                if (titleEl) titleEl.textContent = note.title || '';
                if (contentEl) contentEl.textContent = note.content || '';
                if (attEl) attEl.innerHTML = '';

                let files = [];
                if (note.file_path) {
                    try {
                        const parsed = JSON.parse(note.file_path || '[]');
                        if (Array.isArray(parsed)) files = parsed;
                    } catch (e) {
                        files = [];
                    }
                }

                if (!files.length && note.image_path) {
                    files = [{ path: note.image_path, name: 'image', type: 'image/*' }];
                }

                if (attEl && files.length) {
                    files.forEach(f => {
                        if (!f || !f.path) return;
                        if (f.type && f.type.startsWith('image/')) {
                            const img = document.createElement('img');
                            img.src = f.path;
                            img.className = 'note-view-image';
                            img.alt = f.name || 'image';
                            img.onclick = () => openImageLightbox(f.path);
                            attEl.appendChild(img);
                            return;
                        }

                        const row = document.createElement('div');
                        row.className = 'note-view-file';

                        const icon = document.createElement('div');
                        icon.innerHTML = '<svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path><polyline points="14 2 14 8 20 8"></polyline></svg>';
                        icon.style.color = '#949BA4';

                        const link = document.createElement('a');
                        link.href = f.path;
                        link.download = f.name || '';
                        link.textContent = f.name || 'ไฟล์';

                        row.appendChild(icon);
                        row.appendChild(link);
                        attEl.appendChild(row);
                    });
                }

                if (modal) modal.style.display = 'flex';

                if (modal) {
                    modal.onclick = (e) => {
                        if (e.target === modal) {
                            closeNoteViewModal();
                        }
                    };
                }
            } catch (error) {
            }
        }

        function openUploadsListModal(files) {
            const titleEl = document.getElementById('noteViewTitle');
            const contentEl = document.getElementById('noteViewContent');
            const attEl = document.getElementById('noteViewAttachments');
            const modal = document.getElementById('noteViewModal');

            if (titleEl) titleEl.textContent = 'ไฟล์ทั้งหมด';
            if (contentEl) contentEl.textContent = '';
            if (attEl) attEl.innerHTML = '';

            if (attEl && files && files.length) {
                files.forEach(f => {
                    if (!f) return;
                    if (f.type && f.type.startsWith('image/')) {
                        const img = document.createElement('img');
                        img.src = URL.createObjectURL(f);
                        img.className = 'note-view-image';
                        img.alt = f.name || 'image';
                        img.onclick = () => openImageLightbox(URL.createObjectURL(f));
                        attEl.appendChild(img);
                        return;
                    }

                    const row = document.createElement('div');
                    row.className = 'note-view-file';

                    const icon = document.createElement('div');
                    icon.innerHTML = '<svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path><polyline points="14 2 14 8 20 8"></polyline></svg>';
                    icon.style.color = '#949BA4';

                    const name = document.createElement('div');
                    name.style.flex = '1';
                    name.style.overflow = 'hidden';
                    name.style.textOverflow = 'ellipsis';
                    name.style.whiteSpace = 'nowrap';
                    name.textContent = f.name || 'ไฟล์';

                    row.appendChild(icon);
                    row.appendChild(name);
                    attEl.appendChild(row);
                });
            }

            if (modal) modal.style.display = 'flex';
            if (modal) {
                modal.onclick = (e) => {
                    if (e.target === modal) {
                        closeNoteViewModal();
                    }
                };
            }
        }

        document.querySelectorAll('.note-card').forEach(card => {
            card.addEventListener('click', (e) => {
                if (!e.target.closest('.note-actions')) {
                    const noteId = card.dataset.noteId;
                    openNoteViewModal(noteId);
                }
            });
        });

        const mobileMenuBtn = document.getElementById('mobileMenuBtn');
        const channelSidebar = document.querySelector('.channel-sidebar');
        const channelSidebarOverlay = document.getElementById('channelSidebarOverlay');
        const channelSidebarClose = document.getElementById('channelSidebarClose');

        function closeChannelSidebar() {
            if (channelSidebar) {
                channelSidebar.classList.remove('open');
            }
            if (channelSidebarOverlay) {
                channelSidebarOverlay.classList.remove('active');
            }
        }

        if (mobileMenuBtn && channelSidebar) {
            mobileMenuBtn.addEventListener('click', () => {
                const isOpen = channelSidebar.classList.toggle('open');
                if (channelSidebarOverlay) {
                    if (isOpen) {
                        channelSidebarOverlay.classList.add('active');
                    } else {
                        channelSidebarOverlay.classList.remove('active');
                    }
                }
            });
        }

        if (channelSidebarClose) {
            channelSidebarClose.addEventListener('click', (e) => {
                e.stopPropagation();
                closeChannelSidebar();
            });
        }

        if (channelSidebarOverlay) {
            channelSidebarOverlay.addEventListener('click', () => {
                closeChannelSidebar();
            });
        }

        const channelItems = document.querySelectorAll('.channel-item');
        channelItems.forEach(item => {
            item.addEventListener('click', () => {
                if (window.innerWidth <= 768) {
                    closeChannelSidebar();
                }
            });
        });
    </script>
