        <div class="notes-container">
            <div class="notes-header">
                <h2>
                    <%= channel.name %>
                </h2>
                <% if (isLoggedIn && currentUser) { %>
                    <button class="add-note-btn" id="addNoteBtn">+ เพิ่มโน้ต</button>
                    <% } %>
            </div>

            <div class="notes-content">
                <% if (notes && notes.length> 0) { %>
                    <div class="notes-grid" id="notesGrid">
                        <% notes.forEach(note=> { %>
                            <div class="note-card" data-note-id="<%= note.id %>">
                                <% if (note.image_path) { %>
                                    <img src="<%= (function(){ try { const a = JSON.parse(note.file_path || '[]'); const img = a.find(x => x && x.type && x.type.startsWith('image/')); return img ? img.path : note.image_path; } catch(e) { return note.image_path; } })() %>"
                                        alt="Note image" class="note-image-preview" />
                                    <% } %>
                                        <div class="note-header">
                                            <div style="flex: 1;">
                                                <div class="note-title">
                                                    <%= note.title %>
                                                </div>
                                            </div>
                                            <% if (isLoggedIn && currentUser && currentUser.id===note.user_id) { %>
                                                <div class="note-actions">
                                                    <button class="note-action-btn edit-note-btn"
                                                        data-note-id="<%= note.id %>" title="แก้ไข">
                                                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none"
                                                            stroke="currentColor" stroke-width="2">
                                                            <path
                                                                d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7">
                                                            </path>
                                                            <path
                                                                d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z">
                                                            </path>
                                                        </svg>
                                                    </button>
                                                    <button class="note-action-btn delete-note-btn"
                                                        data-note-id="<%= note.id %>" title="ลบ">
                                                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none"
                                                            stroke="currentColor" stroke-width="2">
                                                            <polyline points="3 6 5 6 21 6"></polyline>
                                                            <path
                                                                d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2">
                                                            </path>
                                                        </svg>
                                                    </button>
                                                </div>
                                                <% } %>
                                        </div>
                                        <% if (note.content) { %>
                                            <div class="note-content">
                                                <%= note.content.replace(/\n/g, '<br>' ) %>
                                            </div>
                                            <% } %>
                                                <% if (note.tags) { %>
                                                    <div class="note-tags">
                                                        <% const tags=note.tags.split(',').filter(t=> t.trim()); %>
                                                            <% tags.forEach(tag=> { %>
                                                                <span class="note-tag">
                                                                    <%= tag.trim() %>
                                                                </span>
                                                                <% }); %>
                                                    </div>
                                                    <% } %>
                                                        <% if (note.file_path) { %>
                                                            <% let att=[]; try { const a=JSON.parse(note.file_path
                                                                || '[]' ); if (Array.isArray(a)) att=a; } catch(e) {
                                                                att=[]; } %>
                                                                <% const first=att && att.length ? att[0] : null; %>
                                                                    <% if (first && !(first.type &&
                                                                        first.type.startsWith('image/'))) { %>
                                                                        <div class="note-file-attachment">
                                                                            <svg width="16" height="16"
                                                                                viewBox="0 0 24 24" fill="none"
                                                                                stroke="currentColor" stroke-width="2">
                                                                                <path
                                                                                    d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z">
                                                                                </path>
                                                                                <polyline points="14 2 14 8 20 8">
                                                                                </polyline>
                                                                            </svg>
                                                                            <a href="<%= first.path %>"
                                                                                download="<%= first.name %>">
                                                                                <%= first.name %>
                                                                            </a>
                                                                            <% if (att.length> 1) { %>
                                                                                <span
                                                                                    style="margin-left: 8px; color: #949BA4;">+
                                                                                    <%= att.length - 1 %> อื่นๆ
                                                                                </span>
                                                                                <% } %>
                                                                        </div>
                                                                        <% } else if (first && att.length> 1) { %>
                                                                            <div class="note-file-attachment">
                                                                                <svg width="16" height="16"
                                                                                    viewBox="0 0 24 24" fill="none"
                                                                                    stroke="currentColor"
                                                                                    stroke-width="2">
                                                                                    <path
                                                                                        d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z">
                                                                                    </path>
                                                                                    <polyline points="14 2 14 8 20 8">
                                                                                    </polyline>
                                                                                </svg>
                                                                                <span>มีไฟล์แนบ <%= att.length %>
                                                                                        ไฟล์</span>
                                                                            </div>
                                                                            <% } %>
                                                                                <% } %>
                                                                                    <div class="note-meta">
                                                                                        <div class="note-author">
                                                                                            <img src="<%= note.user_avatar || 'https://api.dicebear.com/7.x/avataaars/svg?seed=' + note.user_name %>"
                                                                                                alt="<%= note.user_name %>" />
                                                                                            <span>
                                                                                                <%= note.user_name %>
                                                                                            </span>
                                                                                        </div>
                                                                                        <div class="note-date">
                                                                                            <%= new
                                                                                                Date(note.created_at).toLocaleDateString('th-TH')
                                                                                                %>
                                                                                        </div>
                                                                                    </div>
                            </div>
                            <% }); %>
                    </div>
                    <% } else { %>
                        <div class="empty-notes">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                                <polyline points="14 2 14 8 20 8"></polyline>
                                <line x1="16" y1="13" x2="8" y2="13"></line>
                                <line x1="16" y1="17" x2="8" y2="17"></line>
                            </svg>
                            <h3>ยังไม่มีโน้ต</h3>
                            <p>เริ่มต้นสร้างโน้ตแรกของคุณ</p>
                        </div>
                        <% } %>
            </div>
        </div>
    </div>

    <div class="modal-overlay" id="noteViewModal" style="display: none;">
        <div class="modal-container">
            <div class="modal-box">
                <h1 class="modal-title" id="noteViewTitle"></h1>
                <div style="display: flex; flex-direction: column; gap: 10px; overflow: auto; padding-right: 4px;">
                    <div id="noteViewContent" class="note-view-content"></div>
                    <div id="noteViewAttachments" class="note-view-attachments"></div>
