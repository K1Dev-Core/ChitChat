                        <img src="<%= s.avatar || 'https://placehold.co/100/5865F2/white?text=' + (s.name ? s.name.charAt(0) : '?') %>"
                            alt="<%= s.name %>" />
                    </div>
                    <div class="active-pill"></div>
                </a>
                <% }); %>
                    <div class="divider"></div>
